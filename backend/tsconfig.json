{
  "compilerOptions": {
    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Modules & Target */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Source maps */
    "sourceMap": true,
    "declaration": true,

    /* Environment */
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
